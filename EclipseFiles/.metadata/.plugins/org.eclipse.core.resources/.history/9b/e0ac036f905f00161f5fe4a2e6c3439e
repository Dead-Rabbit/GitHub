/**** 辅助方法 *****/
	private int getNewId(){
		int id = 0;
		String sqlString = "select * from items order by id desc";
		try{
			ResultSet res = null;
			Statement sta = conn.createStatement();
			res = sta.executeQuery(sqlString);
			while(res.next()){
				id = res.getInt("id");
				break;
			}
			id++;
		}catch (Exception e){
			e.printStackTrace();
		}
		return id;
	}
